@model Game
@{
    ViewData["Title"] = "Create New Game";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-dark bg-gradiant ms-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white pt-1">Create Game</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="form-floating pt-3 col-12">
                    <input asp-for="Code" class="form-control border-0 shadow" />
                    <label asp-for="Code" class="ms-2 mt-3"></label>
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="form-floating pt-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2 mt-1"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating pt-3 col-12">
                    <input asp-for="DurationInHours" class="form-control border-0 shadow" />
                    <label asp-for="DurationInHours" class="ms-2 mt-3"></label>
                    <span asp-validation-for="DurationInHours" class="text-danger"></span>
                </div>
                <div class="form-floating pt-3 col-12">
                    <textarea asp-for="Description" class="form-control border-0 shadow"></textarea>
                    <label asp-for="Description" class="ms-2 mt-3"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="row pt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-dark form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-asp-controller="Game" asp-action="index" class="btn btn-outline-dark form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}